package cn.myframe.demo;

public class ResTest1 {
	/**
	* @param args
	* 我我我...... 要要.........吃吃吃吃.........饭饭饭
	*/
	public static void main(String[] args) {
		String pharse="我我我...... 要要.........吃吃吃吃.........饭饭饭";
//		明确要使用替换 replaceAll()
//		将点去掉
		pharse=pharse.replaceAll("\\.+", "");
		
//		将叠词去掉
		pharse=pharse.replaceAll("(.)\\1+", "$1");
		
	}
}
