<script>
	document.getElementById("des").onmousemove=function(event){
		//1、获得鼠标的位置
		var x=event.clientX;
		var y=event.clientY;
		var ads=document.getElementById("ads");
		//设置id="ads"的div的位置为鼠标的位置
		//1、设置 ads的div的position属性为absolute
		ads.style.position="absolute";
		//2、设置ads的div的top和left属性哦日鼠标的对应坐标
		ads.style.top=(y-50)+"px";//让鼠标在移动的div的中心点，所以宽高卫原来的1/2
		ads.style.left=(x-50)+"px";
	}
</script>
